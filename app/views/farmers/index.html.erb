<h1>Farmers</h1>
<hr>
<%= link_to "Create New Farmer", '/farmers/new' %> | <%= link_to "Sort by Chore Quantity", '/farmers?sort=asc' %>
<hr>

<% @farmers.each do |farmer| %>
<div id="farmer-<%= farmer.id %>">
  <p><%= link_to "#{farmer.name}", "/farmers/#{farmer.id}/chores" %>
    <p>- created at: <%= farmer.created_at %></p>
    <p><%= link_to 'edit', "/farmers/#{farmer.id}/edit" %> | <%= link_to "delete", "/farmers/#{farmer.id}/destroy", method: :delete, data: { confirm: "Are you sure?" } %></p>
    <hr>
</div>
<% end %>
