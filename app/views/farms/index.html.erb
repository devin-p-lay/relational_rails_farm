<h1>Farms</h1>

<% @farms.each do |farm| %>
  <div id="farm-<%= farm.id %>">
    <p><%= farm.name %> - created at: <%= farm.created_at %>
      <p><%= link_to 'edit', "/farms/#{farm.id}/edit" %></p>
      <p><%= link_to "Delete #{farm.name}", "/farms/#{farm.id}/destroy", method: :delete, data: { confirm: "Are you sure?" } %></p>
  </div>
<% end %>

<%= link_to "Create New Farm", '/farms/new' %>