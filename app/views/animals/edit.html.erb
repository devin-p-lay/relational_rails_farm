<hr>
<h2>Update Animal:</h2>
<h1><%= @animal.name %></h1>

<%= form_with url: "/animals/#{@animal.id}", method: :patch, local: true do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :age, "Age" %>
  <%= f.text_field :age %>

  <%= f.label :rescue, "Rescue" %>
  <%= f.text_field :rescue %>

  <%= f.submit "Submit Update" %>
<% end %>